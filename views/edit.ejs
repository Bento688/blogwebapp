<%- include("partials/header.ejs") %>

<div class="editpage">
   <div class="editpage__header">
        <h2>Edit Tweet</h2>
    </div>

    <div class="editpage__editor">
        <form class="editpage__form-container" action="/edit/<%= id %>" method="POST">
            <div class="editpage__form-item1">
                <textarea class="editpage__input" name="tweet"><%= tweet %></textarea>
            </div>
            <div class="editpage__form-item2">
                <button type="submit">Save</button>
            </div> 
        </form>
    </div> 
</div>



